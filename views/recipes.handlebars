<div class="search-recipes">
  <form>
    <div class="form-group">
      <label for="exampleInputEmail1">Search recipe name</label>
      <input type="" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="">
      <small id="recipe name" class="form-text text-muted"></small>
    </div>

    <div class="form-group">
      <label for="exampleInputPassword1">Search category type</label>
      <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Italian, Lunch, etc">
    </div>

    <button type="submit" class="btn btn-primary Submit-recipe">Search recipe</button>
  </form>
</div>
<div class="card-styling">
  {{#each recipes}}
  <div class="card" style="width: 18rem;">
    <img class="card-img-top" src="assets/img/french_toast_new_700x394.png" alt="Card image cap">
    <div class="card-body">
      <h2>{{dataValues.recipeName}}</h2>
      <li>
        <div class="col-sm-12 text-center">
          <h3>{{dataValues.categoryType}}</h3>
          <p>{{dataValues.ingredients}}</p>
          <p>{{dataValues.instructions}}</p>
        </div>
      </li>
    </div>
  </div>
  {{/each}}
</div>